{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",

  "build": {
    "content": [
      {
        "files": [
          "samples/**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "src/docdb/template/docdb"
    ],
    "globalMetadata": {
      "_appName": "docdb",
      "_appTitle": "docdb",
      "_enableSearch": true,
      "pdf": false
    }
  }
}